rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /appointments/{appointment} {
      // Clients can only read their own appointments if they have the ID, 
      // but listing all is restricted.
      // Admin can do everything.
      allow read: if isAdmin() || (request.auth != null && resource.data.clientEmail == request.auth.token.email);
      
      // Clients can only create (write) their own appointments.
      // We'll mostly use the proxy, but rules should still be solid.
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    match /notifications/{notification} {
      allow read, update: if request.auth != null && request.auth.token.email == resource.data.userId;
      allow create: if request.auth != null;
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}